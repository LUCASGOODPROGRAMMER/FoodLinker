@page "/restaurante/gerenciar-pratos"
@using RedRidersNew.Components.Layout.LayoutRestaurante
@layout MainLayoutRestaurante

<PageTitle>Gerenciar Pratos</PageTitle>

<div class="container py-4">

    <NavBarCardapio />

    <!-- Botão adicionar prato -->
    <div class="d-flex justify-content-end mb-4">
        <button class="btn btn-primary px-4 py-2 d-flex align-items-center gap-2">
            <i class="bi bi-plus-circle"></i>
        </button>
    </div>

    <!-- Grid de pratos -->
    <div class="row g-4">

        <!-- CARD PRATO -->
        <div class="col-6 col-sm-6 col-md-3 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="position-relative">

                    <img class="card-img-top"
                         src="https://i.pinimg.com/originals/d7/5c/ed/d75cedb1c4b89b6cc78341e24bfa4f03.gif"
                         alt="Prato" />

                    <!-- faixa do título -->
                    <div class="titulo-faixa">
                        Prato 1
                    </div>

                </div>

                <div class="card-body text-center">

                    <div class="btn-group w-100 btn-soft-group">
                        <button class="btn btn-soft-primary d-flex align-items-center justify-content-center gap-1">
                            <i class="bi bi-pencil-square"></i>
                        </button>

                        <button class="btn btn-soft-neutral d-flex align-items-center justify-content-center gap-1">
                            <i class="bi bi-eye"></i>
                        </button>

                        <button class="btn btn-soft-danger d-flex align-items-center justify-content-center gap-1">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-6 col-sm-6 col-md-3 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="position-relative">

                    <img class="card-img-top"
                         src="https://i.pinimg.com/originals/09/8c/37/098c3726e07d89030c49c9b2564f23dc.gif"
                         alt="Prato" />

                    <!-- faixa do título -->
                    <div class="titulo-faixa">
                        Prato 2
                    </div>

                </div>

                <div class="card-body text-center">

                    <div class="btn-group w-100 btn-soft-group">
                        <button class="btn btn-soft-primary d-flex align-items-center justify-content-center gap-1">
                            <i class="bi bi-pencil-square"></i>
                        </button>

                        <button class="btn btn-soft-neutral d-flex align-items-center justify-content-center gap-1">
                            <i class="bi bi-eye"></i>
                        </button>

                        <button class="btn btn-soft-danger d-flex align-items-center justify-content-center gap-1">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>

                </div>
            </div>
        </div>

    </div>

</div>
