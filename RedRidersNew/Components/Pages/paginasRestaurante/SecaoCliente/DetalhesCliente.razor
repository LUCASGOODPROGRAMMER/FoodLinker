@page "/restaurante/detalhes-cliente/{id:int}"
@using RedRidersNew.Components.Layout.LayoutRestaurante
@layout MainLayoutRestaurante

<PageTitle> Detalhes do Cliente </PageTitle>

<div class="container py-4">
    <NavBarClientes />

    <div class="card p-4 shadow-sm mb-4">

        <h4 class="mb-3 fw-semibold border-bottom pb-2">Detalhes do Cliente</h4>

        <div class="row g-4">

            <!-- Imagem -->
            <div class="col-12 text-start">
                <img src="@cliente.RotaImgCliente"
                     alt="Foto do Cliente"
                     class="img-fluid rounded shadow-sm"
                     style="max-width: 300px; height: 200px" />
            </div>

            <!-- Nome -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Nome do Cliente</label>
                <div class="form-control bg-light">@cliente.NomeCliente</div>
            </div>

            <!-- Telefone -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Telefone</label>
                <div class="form-control bg-light">@cliente.TelefoneCliente</div>
            </div>

            <!-- CPF -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">CPF</label>
                <div class="form-control bg-light">@cliente.CpfCliente</div>
            </div>

            <!-- RG -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">RG</label>
                <div class="form-control bg-light">@cliente.RgCliente</div>
            </div>

        </div>

        <h5 class="mt-4 fw-semibold border-bottom pb-2">Endereço</h5>

        <div class="row g-4">

            <div class="col-md-4">
                <label class="form-label fw-semibold">CEP</label>
                <div class="form-control bg-light">@cliente.CEPCliente</div>
            </div>

            <div class="col-md-8">
                <label class="form-label fw-semibold">Rua</label>
                <div class="form-control bg-light">@cliente.RuaCliente</div>
            </div>

            <div class="col-md-3">
                <label class="form-label fw-semibold">Número</label>
                <div class="form-control bg-light">@cliente.NumeroCliente</div>
            </div>

            <div class="col-md-9">
                <label class="form-label fw-semibold">Complemento</label>
                <div class="form-control bg-light">@cliente.ComplementoCliente</div>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-semibold">Bairro</label>
                <div class="form-control bg-light">@cliente.BairroCliente</div>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-semibold">Cidade</label>
                <div class="form-control bg-light">@cliente.CidadeCliente</div>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-semibold">Estado</label>
                <div class="form-control bg-light">@cliente.EstadoCliente</div>
            </div>

            <div class="col-12">
                <label class="form-label fw-semibold">Ponto de Referência</label>
                <div class="form-control bg-light">@cliente.PontoReferenciaCliente</div>
            </div>

        </div>
    </div>
</div>

@code {

    [Parameter]
    public int id { get; set; }

    private Cliente cliente = new();

    protected override void OnInitialized()
    {
        // TODO: buscar cliente pelo id no banco/API
        // Exemplo temporário:
        cliente = new Cliente
        {
            NomeCliente = "Nome Exemplo",
            TelefoneCliente = "(00) 00000-0000",
            CpfCliente = "000.000.000-00",
            RgCliente = "0000000",
            RotaImgCliente = "https://i.pinimg.com/originals/3b/d3/6f/3bd36fe648f68a8c8741cb7275ddf26a.gif",

            CEPCliente = "00000-000",
            RuaCliente = "Rua Exemplo",
            NumeroCliente = "123",
            ComplementoCliente = "Casa",
            BairroCliente = "Centro",
            CidadeCliente = "Cidade",
            EstadoCliente = "UF",
            PontoReferenciaCliente = "Próximo ao mercado"
        };
    }

    public class Cliente
    {
        // dados gerais
        public string NomeCliente { get; set; }
        public string TelefoneCliente { get; set; }
        public string CpfCliente { get; set; }
        public string RgCliente { get; set; }
        public string RotaImgCliente { get; set; }

        // endereço
        public string CEPCliente { get; set; }
        public string RuaCliente { get; set; }
        public string NumeroCliente { get; set; }
        public string ComplementoCliente { get; set; }
        public string BairroCliente { get; set; }
        public string CidadeCliente { get; set; }
        public string EstadoCliente { get; set; }
        public string PontoReferenciaCliente { get; set; }
    }

}
