@page "/restaurante/editar-cliente/{id:int}"
@using Microsoft.AspNetCore.Components
@using RedRidersNew.Components.Layout.LayoutRestaurante
@layout MainLayoutRestaurante

<PageTitle> Editar Cliente </PageTitle>

<div class="container py-4">
    <NavBarClientes />

    <EditForm Model="@cliente" OnValidSubmit="SalvarAlteracoes" class="card p-4 mb-4 shadow-sm">

        <DataAnnotationsValidator />
        <ValidationSummary />

        <h4 class="mb-3 fw-semibold border-bottom pb-2">Editar Cliente</h4>

        <div class="row g-3">

            <!-- Nome -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Nome do Cliente</label>
                <InputText class="form-control" @bind-Value="cliente.NomeCliente" />
            </div>

            <!-- Telefone -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Telefone</label>
                <InputText class="form-control" @bind-Value="cliente.TelefoneCliente" />
            </div>

            <!-- CPF -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">CPF</label>
                <InputText class="form-control" @bind-Value="cliente.CpfCliente" />
            </div>

            <!-- RG -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">RG</label>
                <InputText class="form-control" @bind-Value="cliente.RgCliente" />
            </div>

            <!-- Imagem -->
            <div class="col-md-12">
                <label class="form-label fw-semibold">URL da Imagem</label>
                <InputText class="form-control" @bind-Value="cliente.RotaImgCliente" />
            </div>

            <h5 class="mt-4 fw-semibold border-bottom pb-2">Endereço</h5>

            <!-- CEP -->
            <div class="col-md-4">
                <label class="form-label fw-semibold">CEP</label>
                <InputText class="form-control" @bind-Value="cliente.CEPCliente" />
            </div>

            <!-- Rua -->
            <div class="col-md-8">
                <label class="form-label fw-semibold">Rua</label>
                <InputText class="form-control" @bind-Value="cliente.RuaCliente" />
            </div>

            <!-- Número -->
            <div class="col-md-3">
                <label class="form-label fw-semibold">Número</label>
                <InputText class="form-control" @bind-Value="cliente.NumeroCliente" />
            </div>

            <!-- Complemento -->
            <div class="col-md-9">
                <label class="form-label fw-semibold">Complemento</label>
                <InputText class="form-control" @bind-Value="cliente.ComplementoCliente" />
            </div>

            <!-- Bairro -->
            <div class="col-md-4">
                <label class="form-label fw-semibold">Bairro</label>
                <InputText class="form-control" @bind-Value="cliente.BairroCliente" />
            </div>

            <!-- Cidade -->
            <div class="col-md-4">
                <label class="form-label fw-semibold">Cidade</label>
                <InputText class="form-control" @bind-Value="cliente.CidadeCliente" />
            </div>

            <!-- Estado -->
            <div class="col-md-4">
                <label class="form-label fw-semibold">Estado</label>
                <InputText class="form-control" @bind-Value="cliente.EstadoCliente" />
            </div>

            <!-- Referência -->
            <div class="col-12">
                <label class="form-label fw-semibold">Ponto de Referência</label>
                <InputText class="form-control" @bind-Value="cliente.PontoReferenciaCliente" />
            </div>

        </div>

        <div class="mt-4 d-flex justify-content-between">
            <!-- Botão Cancelar -->
            <button type="button" class="btn btn-soft-danger px-4" @onclick="CancelarAlteracoes">
                Cancelar
            </button>

            <!-- Botão Salvar -->
            <button class="btn btn-soft-primary px-4">
                Salvar Alterações
            </button>
        </div>

    </EditForm>

</div>

@code {

    [Parameter]
    public int id { get; set; }

    [Inject]
    private NavigationManager Nav { get; set; }

    private Cliente cliente = new();

    protected override void OnInitialized()
    {
        // TODO: buscar cliente por ID (mock de teste)
        cliente = new Cliente
        {
            NomeCliente = "Cliente Exemplo " + id,
            TelefoneCliente = "(00) 00000-0000",
            CpfCliente = "000.000.000-00",
            RgCliente = "0000000",
            RotaImgCliente = "https://i.pinimg.com/originals/3b/d3/6f/3bd36fe648f68a8c8741cb7275ddf26a.gif",

            CEPCliente = "00000-000",
            RuaCliente = "Rua Exemplo",
            NumeroCliente = "123",
            ComplementoCliente = "Casa",
            BairroCliente = "Centro",
            CidadeCliente = "Cidade",
            EstadoCliente = "UF",
            PontoReferenciaCliente = "Próximo ao mercado"
        };
    }

    private void SalvarAlteracoes()
    {
        // TODO: salvar no banco/API

        Nav.NavigateTo($"/restaurante/detalhes-cliente/{id}");
    }

    private void CancelarAlteracoes()
    {
        Nav.NavigateTo($"/restaurante/detalhes-cliente/{id}");
    }

    public class Cliente
    {
        public string NomeCliente { get; set; }
        public string TelefoneCliente { get; set; }
        public string CpfCliente { get; set; }
        public string RgCliente { get; set; }
        public string RotaImgCliente { get; set; }

        public string CEPCliente { get; set; }
        public string RuaCliente { get; set; }
        public string NumeroCliente { get; set; }
        public string ComplementoCliente { get; set; }
        public string BairroCliente { get; set; }
        public string CidadeCliente { get; set; }
        public string EstadoCliente { get; set; }
        public string PontoReferenciaCliente { get; set; }
    }
}
