@page "/restaurante/detalhes-restaurante"
@using RedRidersNew.Components.Layout.LayoutRestaurante
@layout MainLayoutRestaurante

<PageTitle>Detalhes do Restaurante</PageTitle>

<div class="container py-4">
    <NavBarRestaurante />

    <!-- Imagem do restaurante -->

        <!-- valor do src="@restaurante.RotaImgEstabelecimento" na img-->
    <img src="https://i.pinimg.com/736x/06/14/ad/0614ade80a5f4b7e565a432cd8009bef.jpg"
         alt="Imagem do Restaurante"
         class="img-fluid banner-img shadow-sm mb-4" />

    <div class="card p-4 shadow-sm">

        <h4 class="mb-3 fw-semibold border-bottom pb-2">Dados do Restaurante</h4>

        <div class="row g-3">

            <!-- Nome do Estabelecimento -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Nome do Estabelecimento</label>
                <InputText class="form-control" @bind-Value="restaurante.NomeEstabelecimento" />
            </div>

            <!-- Telefone -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Telefone</label>
                <InputText class="form-control" @bind-Value="restaurante.TelefoneEstabelecimento" />
            </div>

            <!-- CNPJ -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">CNPJ</label>
                <InputText class="form-control" @bind-Value="restaurante.CnpjEstabelecimento" />
            </div>

            <!-- Tipo de Negócio -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Tipo de Negócio</label>
                <InputText class="form-control" @bind-Value="restaurante.TipoNegocioEstabelecimento" />
            </div>

            <!-- Imagem -->
            <div class="col-md-12">
                <label class="form-label fw-semibold">URL da Imagem do Estabelecimento</label>
                <InputText class="form-control" @bind-Value="restaurante.RotaImgEstabelecimento" />
            </div>

            <!-- Endereço -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">CEP</label>
                <InputText class="form-control" @bind-Value="restaurante.CEPEstabelecimento" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Rua</label>
                <InputText class="form-control" @bind-Value="restaurante.RuaEstabelecimento" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Número</label>
                <InputText class="form-control" @bind-Value="restaurante.NumeroEstabelecimento" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Complemento</label>
                <InputText class="form-control" @bind-Value="restaurante.ComplementoEstabelecimento" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Bairro</label>
                <InputText class="form-control" @bind-Value="restaurante.BairroEstabelecimento" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Cidade</label>
                <InputText class="form-control" @bind-Value="restaurante.CidadeEstabelecimento" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Estado</label>
                <InputText class="form-control" @bind-Value="restaurante.EstadoEstabelecimento" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Ponto de Referência</label>
                <InputText class="form-control" @bind-Value="restaurante.PontoReferenciaEstabelecimento" />
            </div>

        </div>

    </div>
</div>

@code {
    private CadastroRestaurante restaurante = new()
    {
        // Preencher com dados mockados ou carregados do banco
    };

    private void IrParaEdicao()
    {
        // navega para /restaurante/editar-restaurante
    }

    public class CadastroRestaurante
    {
        public string NomeEstabelecimento { get; set; }
        public string TelefoneEstabelecimento { get; set; }
        public string RotaImgEstabelecimento { get; set; }
        public string RazaoSocialEstabelecimento { get; set; }
        public string CnpjEstabelecimento { get; set; }
        public string TipoNegocioEstabelecimento { get; set; }

        public string CEPEstabelecimento { get; set; }
        public string RuaEstabelecimento { get; set; }
        public string NumeroEstabelecimento { get; set; }
        public string ComplementoEstabelecimento { get; set; }
        public string BairroEstabelecimento { get; set; }
        public string CidadeEstabelecimento { get; set; }
        public string EstadoEstabelecimento { get; set; }
        public string PontoReferenciaEstabelecimento { get; set; }
    }
}
