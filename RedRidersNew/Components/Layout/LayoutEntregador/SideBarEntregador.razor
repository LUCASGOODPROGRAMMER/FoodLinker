@rendermode InteractiveServer

<div class="container-sidebar">
    <aside id="sidebar-restaurant" class="@($"sidebar {(isOpen ? "open" : "closed")}")">
        <h2 class="sidebar-title">Menu</h2>
        <nav class="sidebar-nav">
            <NavLink href="/entregador/corridas-disponiveis" class="nav-link" Match="NavLinkMatch.All">Corridas</NavLink>
            <NavLink href="/entregador/veiculos" class="nav-link">Veiculos</NavLink>
            <NavLink href="/entregador/feedbacks" class="nav-link">FeedBacks</NavLink>
        </nav>
    </aside>

    <button type="button" @onclick="ToggleSidebar">
        <img src="https://i.pinimg.com/originals/6f/c5/a5/6fc5a5ebd4cd1457799bf52c38f10936.gif" class="img-sidebar" alt="Abrir menu" />
    </button>
</div>

@code {
    private bool isOpen = true;
    private void ToggleSidebar() => isOpen = !isOpen;
}
